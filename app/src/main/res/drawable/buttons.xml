<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado pressionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#004080"/> <!-- Fundo azul escuro quando pressionado -->
            <corners android:radius="8dp"/> <!-- Cantos arredondados -->
        </shape>
    </item>

    <!-- Estado padrão -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#0000FF"/> <!-- Fundo azul padrão -->
            <corners android:radius="8dp"/> <!-- Cantos arredondados -->
        </shape>
    </item>
</selector>
