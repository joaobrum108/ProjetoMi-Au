<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    tools:context=".novopet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:orientation="horizontal"
        android:padding="16dp"
        tools:layout_editor_absoluteX="0dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:text="MERCADO"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="0.3"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:contentDescription="Icon 1"
                android:src="@drawable/notificacao" />

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginStart="8dp"
                android:contentDescription="Icon 2"
                android:src="@drawable/sacola" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:layout_width="396dp"
        android:layout_height="60dp"
        android:background="@drawable/edittext_background"
        android:hint="Pesquisar..."
        android:inputType="textPersonName"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.9"
        tools:layout_editor_absoluteY="117dp" />

    <!-- parte do card -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Produtos Recomendados"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="199dp" />


    <LinearLayout
        android:id="@+id/card_container_outer"
        android:layout_width="151dp"
        android:layout_height="288dp"
        android:layout_margin="20dp"
        android:background="@drawable/backgrounddocard"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="282dp">


        <LinearLayout
            android:id="@+id/card_container"
            android:layout_width="130dp"
            android:layout_height="243dp"
            android:background="@drawable/backgrounddocard"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.138"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="328dp">

            <!-- Card Layout -->

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="66dp"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/sacolaMercado" />

            <TextView
                android:id="@+id/product_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ração Special Dog Premium paraCães Adultos Fra..."
                android:textColor="#666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="R$ 00,00"
                android:textColor="#333"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="comprar"

                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/card_container_outer2"
        android:layout_width="154dp"
        android:layout_height="285dp"
        android:layout_margin="20dp"
        android:background="@drawable/backgrounddocard"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="205dp"
        tools:layout_editor_absoluteY="282dp">

        <LinearLayout
            android:id="@+id/card_container2"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:background="@drawable/backgrounddocard"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="66dp"
                android:layout_height="0dp"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/gatinfoto" />

            <TextView
                android:id="@+id/product_description2"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:text="Petisco PremieR Cookie para GatosAdultos Sabor Or......"
                android:textColor="#666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/product_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="R$ 00,00"
                android:textColor="#333"
                android:textSize="16sp"

                />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="comprar"

                />
        </LinearLayout>
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>
